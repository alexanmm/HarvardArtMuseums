<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="32dp"
    android:layout_marginTop="32dp"
    android:layout_marginRight="32dp"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewTopMessageChoose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:lines="2"
        android:shadowColor="#00851515"
        android:text="Message line 1 \nMessage line2"
        android:textColor="#746E6E"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageViewTopMessageBorda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/borda"
        app:srcCompat="@drawable/borda" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewTopMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/pessoas"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/personagem04" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:orientation="vertical"
            android:id="@+id/containerGame"
            android:visibility="gone">

            <TextView
                android:id="@+id/textViewTopMessagePointsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_star_black_24dp"
                android:drawableTint="#479CDB"
                android:padding="8dp"
                android:text="Points: "
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textViewTopMessageTimeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_timer_black_24dp"
                android:drawableTint="#F22F43"
                android:padding="8dp"
                android:text="Time to last: "
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonGamePlayAgain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#80ffffff"
                    android:drawableTop="@drawable/play"
                    android:text="Play" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>