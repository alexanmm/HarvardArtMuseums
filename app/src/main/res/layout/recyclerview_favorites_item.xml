<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageViewFavoritesItemObject"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/image_logo_center"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageViewFavoritesItemObject">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imageViewFavoritesStar1"
                    android:layout_width="@dimen/galeria_obra_icon"
                    android:layout_height="@dimen/galeria_obra_icon"
                    android:src="@drawable/ic_star_border_yellow_24dp" />

                <ImageView
                    android:id="@+id/imageViewFavoritesStar2"
                    android:layout_width="@dimen/galeria_obra_icon"
                    android:layout_height="@dimen/galeria_obra_icon"
                    android:src="@drawable/ic_star_border_yellow_24dp" />

                <ImageView
                    android:id="@+id/imageViewFavoritesStar3"
                    android:layout_width="@dimen/galeria_obra_icon"
                    android:layout_height="@dimen/galeria_obra_icon"
                    android:src="@drawable/ic_star_border_yellow_24dp" />

                <ImageView
                    android:id="@+id/imageViewFavoritesStar4"
                    android:layout_width="@dimen/galeria_obra_icon"
                    android:layout_height="@dimen/galeria_obra_icon"
                    android:src="@drawable/ic_star_border_yellow_24dp" />

                <ImageView
                    android:id="@+id/imageViewFavoritesStar5"
                    android:layout_width="@dimen/galeria_obra_icon"
                    android:layout_height="@dimen/galeria_obra_icon"
                    android:src="@drawable/ic_star_border_yellow_24dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="end">

                <ImageView
                    android:id="@+id/imageViewFavoritesItemShare"
                    android:layout_width="@dimen/galeria_obra_icon"
                    android:layout_height="@dimen/galeria_obra_icon"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/sharevariant" />

                <ImageView
                    android:id="@+id/imageViewFavoritesItemTranslate"
                    android:layout_width="@dimen/galeria_obra_icon"
                    android:layout_height="@dimen/galeria_obra_icon"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/googletranslate" />

                <ImageView
                    android:id="@+id/imageViewFavoritesItemSpeak"
                    android:layout_width="@dimen/galeria_obra_icon"
                    android:layout_height="@dimen/galeria_obra_icon"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/ic_volume_up_black_24dp" />

                <ImageView
                    android:id="@+id/imageViewFavoritesItemRemove"
                    android:layout_width="@dimen/galeria_obra_icon"
                    android:layout_height="@dimen/galeria_obra_icon"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/ic_delete_black_24dp" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/textViewFavoritesItemObjectTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="Nome da Obra"
            android:textColor="#000000"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

        <TextView
            android:id="@+id/textViewFavoritesItemObjectDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:maxLines="3"
            android:text="Descrição da Obra"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewFavoritesItemObjectTitle" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>