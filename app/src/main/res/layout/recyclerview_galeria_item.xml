<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="8dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/imageViewImagemObra"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/colorPrimary"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageViewImagemObra">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="@dimen/galeria_obra_icon"
                    android:layout_height="@dimen/galeria_obra_icon"
                    android:src="@drawable/star" />

                <ImageView
                    android:layout_width="@dimen/galeria_obra_icon"
                    android:layout_height="@dimen/galeria_obra_icon"
                    android:src="@drawable/star" />

                <ImageView
                    android:layout_width="@dimen/galeria_obra_icon"
                    android:layout_height="@dimen/galeria_obra_icon"
                    android:src="@drawable/star" />

                <ImageView
                    android:layout_width="@dimen/galeria_obra_icon"
                    android:layout_height="@dimen/galeria_obra_icon"
                    android:src="@drawable/star" />

                <ImageView
                    android:layout_width="@dimen/galeria_obra_icon"
                    android:layout_height="@dimen/galeria_obra_icon"
                    android:src="@drawable/star" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="end">

                <ImageView
                    android:layout_width="@dimen/galeria_obra_icon"
                    android:layout_height="@dimen/galeria_obra_icon"
                    android:src="@drawable/calendarsearch" />

                <ImageView
                    android:layout_width="@dimen/galeria_obra_icon"
                    android:layout_height="@dimen/galeria_obra_icon"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/download" />

                <ImageView
                    android:layout_width="@dimen/galeria_obra_icon"
                    android:layout_height="@dimen/galeria_obra_icon"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/sharevariant" />

                <ImageView
                    android:layout_width="@dimen/galeria_obra_icon"
                    android:layout_height="@dimen/galeria_obra_icon"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/googletranslate" />

                <ImageView
                    android:layout_width="@dimen/galeria_obra_icon"
                    android:layout_height="@dimen/galeria_obra_icon"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/ic_volume_up_black_24dp" />

                <ImageView
                    android:layout_width="@dimen/galeria_obra_icon"
                    android:layout_height="@dimen/galeria_obra_icon"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/heartoutline" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/textViewNomeObra"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="Nome da Obra"
            android:textColor="#000000"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

        <TextView
            android:id="@+id/textViewDescricaoObra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="Descrição da Obra"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewNomeObra" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>